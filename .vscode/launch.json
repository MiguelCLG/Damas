  // https://docs.godotengine.org/en/stable/getting_started/editor/command_line_tutorial.html
  {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Play in Editor",
        "type": "godot-mono",
        "mode": "playInEditor",
        "request": "launch"
      },
      {
        "name": "Launch (Select Scene)",
        "type": "godot-mono",
        "request": "launch",
        "mode": "executable",
        "preLaunchTask": "build",
        "executable": "${env:GODOT_3_BIN}",
        "executableArguments": [
          "--path",
          "${workspaceRoot}",
          "${command:SelectLaunchScene}"
        ]
      }
    ]
  }
